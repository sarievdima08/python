def my_func (имя, фамилия, год, город, электронная почта, телефон):
    return '' .join ([имя, фамилия, год, город, электронная почта, телефон])


print (my_func (surname = 'Sariev', name = 'Dima', year = '1988', city = 'Elista', email='sariev_dima@mail.ru ',
              телефон = '8-967-625-34-90'))
